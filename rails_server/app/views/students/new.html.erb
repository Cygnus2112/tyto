<% provide(:title, "Create Student Account") %>
<div class="body-container">
  <div class="row">
    <div class="small-12 medium-7 large-5 small-centered columns form-container">
      <%= form_tag('/students', method: 'post') do %>
        <%= label_tag(:username, "Username:") %>
        <%= text_field_tag(:username '', :autofocus => true) %>

        <%= label_tag(:email, "Parent's email address:") %>
        <%= text_field_tag(:email) %>

        <%= label_tag(:phone_number, "Parent's mobile phone number:") %>
        <%= phone_field_tag(:phone_number) %>

        <%= label_tag(:password, "Password:") %>
        <%= password_field_tag(:password) %>

        <%= label_tag(:password_confirmation, "Confirmation:") %>
        <%= password_field_tag(:password_confirmation) %>

        <%= submit_tag "Create my account", class: "button expand" %>
      <% end %>
    </div>
  </div>
</div>
