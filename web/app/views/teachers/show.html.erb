<div class="row">
  <div class="small-12 large-9 columns" id="tabs">
    <dl class="tabs" data-tab>
      <%@classrooms.each_index do |x| %>
         <dd><a href="#panel<%=x%>"><%=@classrooms[x].name%></a></dd>
      <%end%>
      <dd class="active"><a href="#panelcreate">Add Class</a></dd>
    </dl>

    <div class="tabs-content">
      <%@classrooms.each_index do |x| %>
        <div class="content" id="panel<%=x%>">
          <table>
            <thead>
              <tr>
                <th width="200">Student</th>
                <%if @assignments[@classrooms[x].id] != nil %>
                  <%@assignments[@classrooms[x].id].each do |x| %>
                    <th><%=x.name%></th>
                  <%end%>
                <%end%>
              </tr>
            </thead>
            <tbody>
              <%@students[@classrooms[x].id].each do |x| %>
              <tr>
                <td><%=x.username%></td>
              </tr>
              <%end%>
            </tbody>
          </table>
            <%@students[@classrooms[x].id].each do |x| %>
            <%end%>
        </div>
      <%end%>
        <div class="content active" id="panelcreate">
          <p>Create classroom</p>
        </div>
    </div>
  </div>

  <div class="small-12 large-3 columns">
    <div class="row" id="assign">
      assign
    </div>
    <div class="row" id="struggling">
      struggling
    </div>
    <div class="row" id="search">
      search
    </div>
  </div>
</div>

























